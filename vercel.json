{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      }
    ],
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/server.js"
      },
      {
        "source": "/css/(.*)",
        "destination": "/public/css/$1"
      },
      {
        "source": "/js/(.*)",
        "destination": "/public/js/$1"
      },
      {
        "source": "/assets/(.*)",
        "destination": "/public/assets/$1"
      }
    ],
    "headers": [
      {
        "source": "/css/(.*)",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/css"
          }
        ]
      }
    ]
  }